package accessmodifier;

public class Warrior {
	//hp, atk, level, exp 속성 추가
	public int hp;
	public int atk;
	public int level;
	public int exp;
	public String id;
	
	//메서드는 아무리 사용해도 개발자의 의도대로만 사용되도록
	//제한하기 수월하기 때문에 일반적으로 public으로 설정
	public Warrior(String id) {
		//체력, 공격력은 생성시 20, 3으로
		this.hp = 20;
		this.atk = 3;
		//레벨, 경험치는 생성시 1, 0으로
		this.level = 1;
		this.exp = 0;
		//id는 사용자가 입력한대로
		this.id = id;
	}
}
