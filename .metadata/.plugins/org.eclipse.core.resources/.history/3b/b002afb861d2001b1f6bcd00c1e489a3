package constructor;

public class BasketballPlayer {
	public String name;
	public int height;
	public int jumpPower;
	
	public BasketballPlayer(String n, int h, int jp) {	//생성자
		name = n;
		height = h;
		jumpPower = jp;
		System.out.println("농구선수 생성 완료!");
		System.out.println("이름 : " + n + ", 키 : " + h + ", 점프력 : " + jp);
		
		if (height + jumpPower >= 300) {
			System.out.println(name + "은(는)" + "덩크슛에 성공했습니다");
		}else {
			System.out.println("골대에 닿지 않았습니다");
		}
	}
	
	public void shoot() {
		if (height + jumpPower >= 300) {
			System.out.println(name + "은(는)" + "덩크슛에 성공했습니다");
		}else {
			System.out.println("골대에 닿지 않았습니다");
		}
	}//end shoot()
}//end class
