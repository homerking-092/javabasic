package structure;

public class PersonClass {
	//사람 정보를 Person처럼 정의
	//특성 하나를 추가
	public String name;
	public int age;
	public String pNum;
	public String address;
	//성별 추가
	public String sex;
	//안경 착용 유무
	public boolean glasses;
	
	//추가로 아까의 조회 메서드를 내부에 생성
	//클래스 내부에 생성할 때에는 static이 필요 없다
	public void getInfo(PersonClass pc) {
		System.out.println("이름 : " + name);
		System.out.println("성별 : " + pc.age);
		System.out.println("번호 : " + pc.pNum);
		System.out.println("주소 : " + pc.address);
		System.out.println("성별 : " + pc.sex);
		System.out.println("안경 착용 : " + pc.glasses);
	}
}
