package inheritance.game;

public class Archer extends Commoner {
	public int lg;	//사거리
	public int lgValue;
	
	public void getInfo() {
		System.out.println("궁수 전직!");
		System.out.printf("아이디: " + id + ", 레벨: " + lv + 
						  ", 체력: " + hp + ", 마나: " + mp +
						  ", 사거리: " + lg);
	}
	
	public void lgUp() {
		lgValue = 100;
		lg += lgValue;
		System.out.println();
		System.out.println("현재 사거리: " + lg+ "(" + "+" + lgValue + ")");
		System.out.println("사거리" + lgValue + "만큼 증가했습니다");
	}
}
