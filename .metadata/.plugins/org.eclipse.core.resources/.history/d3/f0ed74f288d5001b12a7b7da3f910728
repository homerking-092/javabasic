package polymophism.game;

public class Warrior {
	private int hp;
	private int atk;
	private int lv;
	private int exp;
	private String id;

	public Warrior(String id) {
		this.id = id;
		this.hp = 100;
		this.atk = 10;
		this.lv = 10;
		this.exp = 0;
	}

	public void huntBaron(Baron baron) {
		System.out.println("바론과의 교전이 시작되었습니다");
		// 공격 전에 먼저 트롤의 체력을 체크해서 죽은 트롤이라면
		// 따로 공격을 할 수 없도록 메서드를 바로 탈출시킵니다.
		if (baron.getHp() <= 0) {
			System.out.println("이미 죽은 바론을 공격할 수 없습니다.");
			System.out.println();
			return;
		}
		if (baron.getHp() <= 0) {
			System.out.println("이미 죽은 바론을 공격할 수 없습니다.");
			System.out.println();
			return;
		}
		// 바론과 전투를 할 때는 자신의 공격력을 넘깁니다.
		baron.doBattle(this.atk);
		
		if (baron.getAtk() > this.hp) {
			System.out.println(id + "이(가) 사망했습니다.");
			System.out.println();
			return;
	}
}
